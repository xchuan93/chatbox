#include "Base.xcconfig"
#include "../wire-ios-build-assets/Release_private.xcconfig"


//Code Signature
//
CODE_SIGN_IDENTITY = iPhone Distribution: Wire Swiss GmbH (EDF3JCE8BC)
CODE_SIGN_IDENTITY[sdk=iphoneos*] = iPhone Distribution: Wire Swiss GmbH (EDF3JCE8BC)

DEVELOPMENT_TEAM = EDF3JCE8BC
PROVISIONING_PROFILE_SPECIFIER_APP = iOS Store Distribution com.wearezeta.zclient.ios
PROVISIONING_PROFILE_SPECIFIER_SHARE_EXT = iOS Store Share Extension
PROVISIONING_PROFILE_SPECIFIER_IMGNOTIFICATION_EXT = iOS Store Image Provisioning Profile


CODE_SIGN_ENTITLEMENTS_APP = Wire-iOS/Entitlements-Prod.entitlements
CODE_SIGN_ENTITLEMENTS_SHARE_EXT = Wire-Sharing-Extension-iOS/Wire-Sharing-Extension-iOS.entitlements


//Bundle stuff
//
WIRE_BUNDLE_ID = com.wearezeta.zclient.ios
WIRE_BUILD_NUMBER =
ASSETCATALOG_COMPILER_APPICON_NAME = AppIcon



// Deployment
//
COPY_PHASE_STRIP = YES
STRIP_INSTALLED_PRODUCT = YES



//Build options
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym

OTHER_CFLAGS = ${inherited} -Wno-unused-variable -Wno-macro-redefined


// LLVM compiler - Preprocessing
//
// Turn off analytics & Hockey for the simulator
GCC_PREPROCESSOR_DEFINITIONS[sdk=iphoneos*] = ${inherited} ${GCC_PREPROCESSOR_DEFINITIONS_BASE} IOS USE_ANALYTICS=1 USE_HOCKEY=1 ENABLE_DEVELOPER_MENU=0 LOG_LEVEL_CONFIG=0x411 DYNAMIC_ANNOTATIONS_ENABLED=0 YOUTUBE_API_KEY=$(YOUTUBE_KEY) VIMEO_API_KEY=$(VIMEO_KEY) VIMEO_API_SECRET=$(VIMEO_SECRET) ANALYTICS_API_KEY=$(ANALYTICS_KEY) MIXPANEL_API_KEY=$(MIXPANEL_KEY) HOCKEY_APP_ID_KEY=$(HOCKEY_APP_ID)

GCC_PREPROCESSOR_DEFINITIONS[sdk=iphonesimulator*] = ${inherited} ${GCC_PREPROCESSOR_DEFINITIONS_BASE} IOS USE_ANALYTICS=0 USE_HOCKEY=0 ENABLE_DEVELOPER_MENU=0 LOG_LEVEL_CONFIG=0x411 DYNAMIC_ANNOTATIONS_ENABLED=0 YOUTUBE_API_KEY=$(YOUTUBE_KEY) VIMEO_API_KEY=$(VIMEO_KEY) VIMEO_API_SECRET=$(VIMEO_SECRET) ANALYTICS_API_KEY=$(ANALYTICS_KEY) MIXPANEL_API_KEY=$(MIXPANEL_KEY) HOCKEY_APP_ID_KEY=$(HOCKEY_APP_ID)
